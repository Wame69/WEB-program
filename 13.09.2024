<!DOCTYPE html>
<html>
<head>
    <title>Проверка на не более 2 заглавных букв</title>
</head>
<body>
    <input type="text" id="inputText" placeholder="Введите текст">
    <button onclick="checkUpperCase()">Проверить</button>
    <p id="result"></p>

    <script>
        function checkUpperCase() {
            const inputString = document.getElementById('inputText').value;
            const upperCaseCount = inputString.match(/[A-ZА-Я]/g)?.length || 0;

            const resultText = upperCaseCount <= 2 
                ? 'В строке не более 2 заглавных букв' 
                : 'В строке больше 2 заглавных букв';

            document.getElementById('result').textContent = resultText;
        }
    </script>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
  <title>Решение задач</title>
</head>
<body>
  <input type="text" id="inputString" placeholder="Введите строку">
  <button onclick="checkUppercase()">Проверить заглавные буквы</button>
  <button onclick="removeLongSubstrings()">Удалить длинные подстроки</button>
  <p id="result"></p>

  <script>
    function checkUppercase() {
      const str = document.getElementById('inputString').value;
      const uppercaseCount = str.match(/[A-Z]/g)?.length || 0;
      document.getElementById('result').textContent = uppercaseCount <= 2 ? 'Не более двух заглавных букв' : 'Больше двух заглавных букв';
    }

    function removeLongSubstrings() {
      const str = document.getElementById('inputString').value;
      const result = str.replace(/\b\w{4,}\b/g, '');
      document.getElementById('result').textContent = result;
    }
  </script>
</body>
</html>
